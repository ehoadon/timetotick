        <input type="datetime-local" id="datetimeInput" step="1">
        <button onclick="convertToTicks()">Chuy·ªÉn th√†nh Ticks</button>
        <input type="text" id="ticksInput" placeholder="Nh·∫≠p ticks">
        <button onclick="convertToDatetime()">Chuy·ªÉn th√†nh DateTime</button>
        <h3 id="result"></h3>
